{
    "name": "Switch",
    "description": "A simple redirect extension.",
    "manifest_version": 2,
    "version": "1.0.0",
    "author": "Matheus Alves Pereira - https://github.com/matheus-alpe",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage",
        "tabs"
    ],
    "background": {
        "scripts": ["/dist/background.js"]
    },
    "browser_action": {
        "default_icon": "/src/assets/icons/switch.png",
        "default_popup": "/src/pages/popup.html",
        "default_title": "Add redirect rules."
    }
}
